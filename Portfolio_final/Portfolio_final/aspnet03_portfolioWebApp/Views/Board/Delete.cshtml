                        </p>
                    </div>
                    <br />
                    
                    <div class="form-group text-end">
                        @if (signInManager.IsSignedIn(User) && Model.UserName == User.Identity.Name)
                        {
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn sm btn-danger">
                                <i class="bi bi-trash3"></i> &nbsp; 삭제
                            </a>
                        }

