                        </button>*@
                        <a asp-controller="Board" asp-action="Index" class="btn btn-sm btn-primary">
                            <i class="bi bi-list-ol"></i>&nbsp;목록
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>




