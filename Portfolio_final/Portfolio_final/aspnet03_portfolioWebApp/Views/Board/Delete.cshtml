@model aspnet02_boardapp.Models.Board

@{
    ViewData["Title"] = "글 삭제";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<div style="padding : 50px" class="mt-4">
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-8">
                <h3 class="text-primary">게시판 글삭제</h3>
            </div>

            <div class="col-4 text-end">
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h5 class="text-danger">삭제하시겠습니까?</h5>
            </div>
        </div>
    </div>
    <hr />

    <div class="container">
        <div class="row">
            <div class="col-md">
                <form asp-action="DeletePost">
                    <input type="hidden" asp-for="Id" />
                    @*<div class="form-group">
                    <label asp-for="UserId" class="control-label"></label>
                    <input asp-for="UserId" class="form-control" readonly />
                    <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>
