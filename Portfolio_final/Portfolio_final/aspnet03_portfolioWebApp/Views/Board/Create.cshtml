@model aspnet02_boardapp.Models.Board

@{
    ViewData["Title"] = "글쓰기";
    Layout = "~/Views/Shared/_NewLayout.cshtml";

}

@*<h1>Create</h1>

<h4>Board</h4>*@

<div style="padding : 50px" class="mt-4">
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-8">
                <h3 class="text-primary">게시판 글쓰기</h3>
            </div>

            <div class="col-4 text-end">
            </div>
        </div>
    </div>
    <hr />

    <div class="container">
        <div class="row">
            <div class="col-md">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="UserId" value="@User.Identity.Name" />
