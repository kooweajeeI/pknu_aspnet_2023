    <link rel="stylesheet" href="~/themes/Arsha/assets/css/style.css">
    <link rel="stylesheet" href="~/themes/Arsha/assets/vendor/aos/aos.css">
    <link rel="stylesheet" href="~/themes/Arsha/assets/vendor/bootstrap/css/bootstrap.min.css">
