                    </div>
                </div>
                <div class="col-lg-6 order-1 order-lg-2 hero-img" data-aos="zoom-in" data-aos-delay="200">
                    <img src="~/themes/Arsha/assets/img/hero-img.png" class="img-fluid animated" alt="">
                </div>
            </div>
        </div>
        </section>
    }
    else
    {
        
    }
    <!-- End Hero -->




    <div>
        <!-- 필수!!! -->
        @RenderBody()
    </div>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <p>
                        Copyright © 2023 PKNU AC., Ltd. All Rights Reserved.

                        <br>Web Designed by <a rel="nofollow" href="https://bootstrapmade.com/" target="_blank" title="free CSS templates">TemplateMo</a>
